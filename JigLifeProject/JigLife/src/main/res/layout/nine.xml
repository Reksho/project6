<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:columnWidth="300dp"
            android:orientation="horizontal"
            android:rowCount="5"
            android:stretchMode="columnWidth" >

    <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:orientation="horizontal" android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/topleft"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig1" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/topmid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig2" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/topright"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig3" />
            </LinearLayout>

        </LinearLayout>





        <LinearLayout
                android:orientation="horizontal" android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/midleft"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig4" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/midmid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig5" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/midright"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig6" />
            </LinearLayout>

        </LinearLayout>






        <LinearLayout
                android:orientation="horizontal" android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/bottomleft"
                    android:layout_weight="33"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig7" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/bottommid"
                    android:layout_weight="33"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig8" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/bottomright"
                    android:layout_weight="33"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape" >

                <ImageView
                        android:id="@+id/myimage9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jig9" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</GridLayout>