<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:columnWidth="300dp"
            android:orientation="horizontal"
            android:rowCount="5"
            android:stretchMode="columnWidth" >

    <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:weightSum="99"
            android:layout_row="0" android:layout_column="0">

        <LinearLayout
                android:id="@+id/topleft"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:tag="1"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="1"
                    android:src="@drawable/jig1" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/topmid"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:tag="2"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="2"
                    android:src="@drawable/jig2" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/topright"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:tag="3"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="3"
                    android:src="@drawable/jig3" />
        </LinearLayout>

    </LinearLayout>





    <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:weightSum="99"
            android:layout_row="1" android:layout_column="0">

        <LinearLayout
                android:id="@+id/midleft"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:tag="4"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="4"
                    android:src="@drawable/jig4" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/midmid"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:tag="4"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5"
                    android:src="@drawable/jig5" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/midright"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:tag="6"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="6"
                    android:src="@drawable/jig6" />
        </LinearLayout>

    </LinearLayout>






    <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:weightSum="99"
            android:layout_row="2" android:layout_column="0">

        <LinearLayout
                android:id="@+id/bottomleft"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:tag="1"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="1"
                    android:src="@drawable/jig7" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottommid"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:tag="2"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="2"
                    android:src="@drawable/jig8" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottomright"
                android:layout_weight="33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:tag="3"
                android:background="@drawable/shape" >

            <ImageView
                    android:id="@+id/myimage9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="3"
                    android:src="@drawable/jig9" />
        </LinearLayout>

    </LinearLayout>



</GridLayout>